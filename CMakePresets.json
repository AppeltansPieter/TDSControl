{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22
  },

  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_EXTENSIONS": "OFF"
      }
    },

    {
      "name": "debug",
      "inherits": "base",
      "displayName": "Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "TDS_BUILD_TESTING": "ON"
      }
    },
    {
      "name": "coverage",
      "inherits": "debug",
      "displayName": "Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "TDS_BUILD_TESTING": "ON",
        "TDS_ENABLE_COVERAGE": "ON"
      }
    },
    {
        "name": "ci",
        "inherits": "coverage",
        "cacheVariables": {
            "ENABLE_WARNINGS_AS_ERRORS": "ON"
        }
    },
    {
      "name": "release",
      "inherits": "base",
      "displayName": "Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "relwithdebinfo",
      "inherits": "base",
      "displayName": "RelWithDebInfo",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "build-debug",
      "configurePreset": "debug"
    },
    {
      "name": "build-coverage",
      "configurePreset": "coverage"
    },
    {
      "name": "build-release",
      "configurePreset": "release"
    },
    {
      "name": "build-relwithdebinfo",
      "configurePreset": "relwithdebinfo"
    },
    {
        "name": "build-ci",
        "configurePreset": "ci"
    }
  ],

  "testPresets": [
    {
      "name": "test-debug",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-coverage",
      "configurePreset": "coverage",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-ci",
      "configurePreset": "ci",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}